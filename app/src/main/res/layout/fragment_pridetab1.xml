<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF280"
    tools:context=".pridetab1">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/PrideHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Origins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/history_section_1"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:text="Began on June 28th 1969 The police raid on the gay bar Stonewall Inn sparked the riots Lasted 6 days and was the beginning of the gay movement  One the one year anniversary of the riots thousands of people marched from the stonewall inn  to central park becoming the first ever pride parade  " />

        <TextView
            android:id="@+id/Present_Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_section_2"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:text="Present Day info here" />

        <TextView
            android:id="@+id/Timeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/history_section_3"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:text="Bullet points or images for the timeline here" />

        <TextView
            android:id="@+id/More_Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/history_section_4"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:text="Add extra links here" />

        <TextView
            android:id="@+id/Work_Cited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/history_section_5"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:text="Provide citations here" />
    </LinearLayout>
</ScrollView>